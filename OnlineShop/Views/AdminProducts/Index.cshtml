@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewData["Title"] = "Products";
    var categories = (Microsoft.AspNetCore.Mvc.Rendering.SelectList)ViewData["Categories"]!;
    var selectedCategoryId = ViewData["SelectedCategoryId"] as int?;
    var featuredOnly = ViewData["FeaturedOnly"] as bool? ?? false;
    var currentPage = (int)ViewData["CurrentPage"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
    var totalItems = (int)ViewData["TotalItems"]!;
}

<h2>Products</h2>

<form method="get" class="row g-2 mb-3 align-items-center">
    <div class="col-md-3">
        <select name="categoryId" class="form-select">
            <option value="">All categories</option>
            @foreach (var item in categories)
            {
                <option value="@item.Value" selected="@(selectedCategoryId?.ToString() == item.Value ? "selected" : null)">
                    @item.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="featuredOnly" value="true" id="featuredOnly" checked="@(featuredOnly ? "checked" : null)">
            <label class="form-check-label" for="featuredOnly">
                Featured only
            </label>
        </div>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary w-100">Filter</button>
    </div>
    <div class="col-md-5 text-end">
        <a asp-action="Create" class="btn btn-primary">Create new product</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Featured</th>
        <th>Active</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Category?.Name</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Inventory?.StockQuantity</td>
            <td>
                @if (item.IsFeatured)
                {
                    <span class="badge bg-warning text-dark">★ Featured</span>
                }
                else
                {
                    <span class="text-muted">—</span>
                }
            </td>
            <td>@(item.IsActive ? "Yes" : "No")</td>
            <td class="text-end">
                <div class="btn-group me-2" role="group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
                <div class="btn-group" role="group">
                    <a asp-controller="AdminProductImages" asp-action="Index" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-primary" title="Manage Images">
                        <i class="bi bi-images"></i> Images
                    </a>
                    <a asp-controller="AdminProductInventory" asp-action="ManageStock" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-success" title="Manage Stock">
                        <i class="bi bi-box-seam"></i> Stock
                    </a>
                    <a asp-controller="AdminProductReviews" asp-action="Index" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-info" title="Manage Reviews">
                        <i class="bi bi-star"></i> Reviews
                    </a>
                    <a asp-controller="AdminProductPromos" asp-action="Index" asp-route-productId="@item.Id" class="btn btn-sm btn-outline-warning" title="Manage Promos">
                        <i class="bi bi-tag"></i> Promos
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Product pagination">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted">
                Showing page @currentPage of @totalPages (Total: @totalItems products)
            </div>
            <ul class="pagination mb-0">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-categoryId="@selectedCategoryId" asp-route-featuredOnly="@(featuredOnly ? "true" : null)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }

                @{
                    var startPage = Math.Max(1, currentPage - 2);
                    var endPage = Math.Min(totalPages, currentPage + 2);

                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-categoryId="@selectedCategoryId" asp-route-featuredOnly="@(featuredOnly ? "true" : null)">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    for (var i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-categoryId="@selectedCategoryId" asp-route-featuredOnly="@(featuredOnly ? "true" : null)">@i</a>
                        </li>
                    }

                    if (endPage < totalPages)
                    {
                        if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-categoryId="@selectedCategoryId" asp-route-featuredOnly="@(featuredOnly ? "true" : null)">@totalPages</a>
                        </li>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-categoryId="@selectedCategoryId" asp-route-featuredOnly="@(featuredOnly ? "true" : null)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </div>
    </nav>
}


