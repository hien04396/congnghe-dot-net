@model IEnumerable<OnlineShop.Models.ProductPromo>

@{
    ViewData["Title"] = "Product Promos";
    var products = (IEnumerable<OnlineShop.Models.Product>)ViewData["Products"]!;
    var productId = ViewData["ProductId"] as int?;
    var productName = ViewData["ProductName"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Product Promos @(productId.HasValue ? $"- {productName}" : "")</h2>
    @if (productId.HasValue)
    {
        <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Products
        </a>
    }
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="productId" class="form-select">
            <option value="">All products</option>
            @foreach (var p in products)
            {
                <option value="@p.Id" selected="@(productId == p.Id ? "selected" : null)">@p.Name</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary">Filter</button>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" asp-route-productId="@productId" class="btn btn-primary">Create promo</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th>Amount Off</th>
        <th>Start</th>
        <th>End</th>
        <th>Active</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product?.Name</td>
            <td>@item.AmountOff.ToString("C")</td>
            <td>@item.StartDate?.ToLocalTime().ToString("yyyy-MM-dd")</td>
            <td>@item.EndDate?.ToLocalTime().ToString("yyyy-MM-dd")</td>
            <td>@(item.IsActive ? "Yes" : "No")</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@productId" class="btn btn-sm btn-secondary">Edit</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@item.Id" />
                    @if (productId.HasValue)
                    {
                        <input type="hidden" name="returnProductId" value="@productId" />
                    }
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this promo?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>


