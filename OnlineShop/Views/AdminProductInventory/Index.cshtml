@model IEnumerable<OnlineShop.Models.ProductInventory>

@{
    ViewData["Title"] = "Inventory";
}

<h2>Product Inventory</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th>Stock</th>
        <th>Last updated</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var low = item.StockQuantity <= 3;
        <tr class="@(low ? "table-warning" : "")">
            <td>@item.Product?.Name</td>
            <td>@item.StockQuantity</td>
            <td>@item.LastUpdated.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            <td class="text-end">
                <form asp-action="Update" method="post" class="d-inline-flex">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="number" name="stockQuantity" value="@item.StockQuantity" class="form-control form-control-sm me-2" style="width:90px" />
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>


