@model IEnumerable<OnlineShop.Models.ProductReview>

@{
    ViewData["Title"] = "Product Reviews";
    var products = (IEnumerable<OnlineShop.Models.Product>)ViewData["Products"]!;
    var productId = ViewData["ProductId"] as int?;
    var product = productId.HasValue ? products.FirstOrDefault(p => p.Id == productId.Value) : null;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Product Reviews @(productId.HasValue ? $"- {product?.Name}" : "")</h2>
    @if (productId.HasValue)
    {
        <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Products
        </a>
    }
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="productId" class="form-select">
            <option value="">All products</option>
            @foreach (var p in products)
            {
                <option value="@p.Id" selected="@(productId == p.Id ? "selected" : null)">@p.Name</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary">Filter</button>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" asp-route-productId="@productId" class="btn btn-primary">Add review</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th>Title</th>
        <th>Rating</th>
        <th>Created</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product?.Name</td>
            <td>@item.Title</td>
            <td>@item.Rating</td>
            <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@productId" class="btn btn-sm btn-secondary">Edit</a>
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@item.Id" />
                    @if (productId.HasValue)
                    {
                        <input type="hidden" name="returnProductId" value="@productId" />
                    }
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this review?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>


