@model OnlineShop.Models.Product

@{
    ViewData["Title"] = "Product Images";
}

<h2>Edit Product Images for "@Model.Name"</h2>

<p>
    <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-secondary">Back to Products</a>
</p>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th>Preview</th>
        <th>Url</th>
        <th>Primary</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var img in Model.Images)
    {
        <tr>
            <td>
                <img src="@img.ImageUrl" alt="image" style="max-height:60px" />
            </td>
            <td>@img.ImageUrl</td>
            <td>@(img.IsPrimary ? "Yes" : "")</td>
            <td class="text-end">
                @if (!img.IsPrimary)
                {
                    <form asp-action="MakePrimary" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@img.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">Make primary</button>
                    </form>
                }
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@img.Id" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<h4>Add image</h4>
<form asp-action="Add" method="post" class="row g-2">
    <input type="hidden" name="productId" value="@Model.Id" />
    <div class="col-md-6">
        <input name="imageUrl" class="form-control" placeholder="Please input the image URL here" />
    </div>
    <div class="col-md-3 form-check">
        <input class="form-check-input" type="checkbox" name="isPrimary" value="true" id="isPrimary" />
        <label class="form-check-label" for="isPrimary">Set as primary</label>
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Add image</button>
    </div>
</form>


