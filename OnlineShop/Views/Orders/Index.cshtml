@model IEnumerable<OnlineShop.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@o.TotalAmount.ToString("C")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}


