@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card text-bg-light">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text display-6">@ViewData["ProductCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-light">
            <div class="card-body">
                <h5 class="card-title">Categories</h5>
                <p class="card-text display-6">@ViewData["CategoryCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-light">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text display-6">@ViewData["OrderCount"]</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-light">
            <div class="card-body">
                <h5 class="card-title">Low stock (&lt;= 3)</h5>
                <p class="card-text display-6">@ViewData["LowStockCount"]</p>
            </div>
        </div>
    </div>
</div>

