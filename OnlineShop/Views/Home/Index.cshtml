@model IEnumerable<OnlineShop.Models.Product>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-4">
    <h1 class="display-5">Welcome to OnlineShop</h1>
    <p class="text-muted">Simple student-made clothing store demo.</p>
    <p>
        <a asp-controller="Store" asp-action="Products" class="btn btn-primary">Start shopping</a>
    </p>
</div>

<h3>Featured products</h3>
<div class="row">
    @foreach (var p in Model)
    {
        var primaryImage = p.Images.FirstOrDefault(i => i.IsPrimary)?.ImageUrl ?? "/images/sample-placeholder.png";
        var isOutOfStock = p.Inventory == null || p.Inventory.StockQuantity <= 0;
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <img src="@primaryImage" class="card-img-top" alt="@p.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="card-text text-muted">@p.Price.ToString("C")</p>
                    @if (isOutOfStock)
                    {
                        <span class="badge text-bg-danger mb-2">Out of stock</span>
                    }
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary mt-auto">View details</a>
                </div>
            </div>
        </div>
    }
</div>
